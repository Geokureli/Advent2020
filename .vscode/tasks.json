{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "debug: flash",
			"command": "haxelib",
			"args": ["run", "lime", "build", "flash", "-debug", "-Dfdb"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"]
		},
		{
			"label": "debug: html",
			"command": "haxelib",
			"args": ["run", "lime", "build", "html5", "-debug", "--port=3001"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"],
			"group": { "kind": "build", "isDefault": true }
		}
	]
}
